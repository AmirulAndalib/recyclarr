{
  // !!! IMPORTANT NOTICE !!!
  // Modular renovate configuration is in the `.renovate/` directory!
  //
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":disableRateLimiting",
    ":ignoreUnstable",
    "helpers:pinGitHubActionDigestsToSemver",
    "recyclarr/recyclarr//.renovate/autoMerge.json5",
    "recyclarr/recyclarr//.renovate/customManagers.json5",
    "recyclarr/recyclarr//.renovate/groups.json5",
    "recyclarr/recyclarr//.renovate/labels.json5",
    "recyclarr/recyclarr//.renovate/packageRules.json5",
    "recyclarr/recyclarr//.renovate/semanticCommits.json5"
  ],
  minimumReleaseAge: "5 days",
  ignorePresets: ["mergeConfidence:all-badges"],
  configMigration: true,
  gitIgnoredAuthors: ["227055450+renohate[bot]@users.noreply.github.com"]
}
