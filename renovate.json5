{
  // !!! IMPORTANT NOTICE !!!
  // Modular renovate configuration is in the `.renovate/` directory!
  //
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":disableRateLimiting",
    "helpers:pinGitHubActionDigestsToSemver",
    "local>.renovate/customManagers.json5",
    "local>.renovate/groups.json5",
    "local>.renovate/labels.json5",
    "local>.renovate/packageRules.json5",
    "local>.renovate/semanticCommits.json5"
  ],
  minimumReleaseAge: "5 days",
  ignorePresets: ["mergeConfidence:all-badges"],
  configMigration: true
}
