{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": ["build", "-property:GenerateFullPaths=true", "-consoleLoggerParameters:NoSummary"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "echo": false,
        "showReuseMessage": false,
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "publish",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "src/Recyclarr.Cli/Recyclarr.Cli.csproj",
        "-property:GenerateFullPaths=true",
        "-consoleLoggerParameters:NoSummary",
        "-o",
        "docker/artifacts/${config:recyclarr.runtime}"
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "echo": false,
        "showReuseMessage": false,
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "test",
      "type": "process",
      "command": "dotnet",
      "args": ["test", "-property:GenerateFullPaths=true", "-consoleLoggerParameters:NoSummary"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem",
        "echo": false,
        "showReuseMessage": false,
        "panel": "shared",
        "clear": false
      }
    }
  ]
}
