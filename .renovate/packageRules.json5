{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "NuGet package presentation configuration",
      matchDatasources: ["nuget"],
      matchUpdateTypes: ["patch", "minor", "major"],
      prBodyColumns: ["Package", "Change", "Age", "Adoption", "Passing", "Confidence", "Pending"]
    },
    {
      description: "Disable minimumReleaseAge for datasources without timestamp support",
      matchDatasources: ["custom.endoflife-date", "dotnet-version"],
      minimumReleaseAge: null
    }
  ]
}
